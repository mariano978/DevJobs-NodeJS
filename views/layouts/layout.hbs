<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200;500;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/app.css" />

  <title>{{nombrePagina}}</title>

</head>

<body>

  <div class="busqueda-mobile">

  </div>

  <div class="nombre-sitio contenedor">
    <a href="/">devJobs</a>

    {{#if barra}}
    <div class="buscador">
      <div class="barra">
        <input type="text" class="buscar" />
        <div class="controles-buscador">
          <button id="lupa"></button>
          <button id="quit"></button>
        </div>

      </div>

      <ul class="caja-busqueda">
        <li class="resultado-busqueda">
          <div class="resultado-izquierda">
            <h3 class="resultado-empresa">Empresa</h3>
            <p class="resultado-texto">Elemento</p>
          </div>
          <a href="/vacantes" class="btn btn-verde">MÃ¡s Info.</a>
        </li>
      </ul>

    </div>
    {{/if}}
  </div>

  {{#if nombrePagina}}
  <header class="site-header contenedor separador">
    <h2>{{nombrePagina}}</h2>
    {{#if tagLine}}
    <p class="tagline">{{tagLine}}</p>
    {{/if}}

    {{#if boton}}
    <a href="/vacantes/crear" class="btn btn-azul">Publicar nueva Vacante</a>
    {{/if}}
  </header>
  {{/if}}

  <div class="contenedor contenido-principal">
    {{{body}}}
  </div>

</body>

</html>

