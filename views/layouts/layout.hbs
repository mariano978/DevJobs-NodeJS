<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/app.css" />

    <title>{{nombrePagina}}</title>

  </head>

  <body>

    <div class="nombre-sitio contenedor">
      <a href="/">devJobs</a>

      {{#if barra}}
        <div class="buscador">
          <form action="#">
            <input type="text" class="buscar" />
            <input type="submit" value="Buscar" />
          </form>
        </div>
      {{/if}}
    </div>

    <header class="site-header contenedor separador">
      <h2>{{nombrePagina}}</h2>
      {{#if tagLine}}
        <p class="tagline">{{tagLine}}</p>
      {{/if}}

      {{#if boton}}
        <a href="/vacantes/crear" class="btn btn-azul">Publicar nueva Vacante</a>
      {{/if}}
    </header>

    <div class="contenedor contenido-principal">
      {{{body}}}
    </div>

  </body>
</html>

{{#if trixScript}}
  <script src="/js/trix.min.js"></script>
{{/if}}

{{#if vacantesFormScript}}
  <script src="/js/vacantesForm.min.js"></script>
{{/if}}