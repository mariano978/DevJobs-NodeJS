<h3>Informacion General</h3>

<div class="campo">
  <label for="titulo">Titulo</label>
  <input type="text" name="titulo" placeholder="Ej. NodeJS developer" required {{#if vacante}}
    value="{{vacante.titulo}}" {{/if}} />
</div>

<div class="campo">
  <label for="empresa">Empresa</label>
  <input type="text" name="empresa" placeholder="Empresa que contrata" required {{#if vacante}}
    value="{{vacante.empresa}}" {{/if}} />
</div>

<div class="campo">
  <label for="ubicacion">Ubicacion</label>
  <input type="text" name="ubicacion" placeholder="Ej. Argentina, Remoto" required {{#if vacante}}
    value="{{vacante.ubicacion}}" {{/if}} />
</div>

<div class="campo">
  <label for="salario">Salario (USD)</label>
  <input type="text" name="salario" placeholder="Ej. $500 USD" required {{#if vacante}} value="{{vacante.salario}}"
    {{/if}} />
</div>

<div class="campo">
  <label>Contrato</label>
  <select name="contrato">
    {{#tipoContrato vacante.contrato}}
      <option disabled selected>--Selecciona--</option>
      <option value="Freelance">Freelance</option>
      <option value="Tiempo Completo">Tiempo Completo</option>
      <option value="Medio tiempo">Medio tiempo</option>
      <option value="Por proyecto">Por proyecto</option>
    {{/tipoContrato}}
  </select>
    

</div>

<h3>Descripci√≥n del puesto</h3>

<div class="campo descripcion">
  <label for="descripcion">Descripcion</label>
  <input type="hidden" id="x" name="descripcion" value="{{vacante.descripcion}}" />
  <trix-editor input="x"></trix-editor>
</div>

<h3>Conocimientos</h3>

<ul class="lista-conocimientos">
  {{#if vacante.skills}}
    {{#seleccionarSkills vacante.skills}}{{/seleccionarSkills}}
  {{else}}
    {{#seleccionarSkills nada}}{{/seleccionarSkills}}
  {{/if}}
</ul>

<div class="campo centrar-horizontal">
  <input type="hidden" name="skills" id="skills" />
  <input type="submit" value="Publicar" class="btn btn-azul" />
</div>