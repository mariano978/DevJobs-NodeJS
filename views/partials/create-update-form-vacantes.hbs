<h3>Informacion General</h3>

<div class="campo">
  <label for="titulo">Titulo</label>
  <input type="text" name="titulo" placeholder="Ej. NodeJS developer"  
    {{#if vacanteFormData}}
        value="{{vacanteFormData.titulo}}" 
      {{else}}
         {{#if vacante}}
            value="{{vacante.titulo}}" 
        {{/if}} />
    {{/if}} />
</div>

<div class="campo">
  <label for="empresa">Empresa</label>
  <input type="text" name="empresa" placeholder="Empresa que contrata" 
     {{#if vacanteFormData}}
        value="{{vacanteFormData.empresa}}" 
      {{else}}
         {{#if vacante}}
            value="{{vacante.empresa}}" 
        {{/if}} />
    {{/if}}
     />
</div>

<div class="campo">
  <label for="ubicacion">Ubicacion</label>
  <input type="text" name="ubicacion" placeholder="Ej. Argentina, Remoto" 
     {{#if vacanteFormData}}
        value="{{vacanteFormData.ubicacion}}" 
      {{else}}
         {{#if vacante}}
            value="{{vacante.ubicacion}}" 
        {{/if}} />
    {{/if}}
    />
</div>

<div class="campo">
  <label for="salario">Salario (USD)</label>
  <input type="text" name="salario" placeholder="Ej. $500 USD"  
     {{#if vacanteFormData}}
        value="{{vacanteFormData.salario}}"  
      {{else}}
         {{#if vacante}}
            value="{{vacante.salario}}" 
        {{/if}} />
    {{/if}}
     />
</div>

<div class="campo">
  <label>Contrato</label>
  <select name="contrato">   

     {{#if vacanteFormData}}
  
    {{#tipoContrato vacanteFormData.contrato}}
      <option disabled selected>--Selecciona--</option>
      <option value="Freelance">Freelance</option>
      <option value="Tiempo Completo">Tiempo Completo</option>
      <option value="Medio tiempo">Medio tiempo</option>
      <option value="Por proyecto">Por proyecto</option>
    {{/tipoContrato}}
      {{else}}
         {{#if vacante}}
           
    {{#tipoContrato vacante.contrato}}
      <option disabled selected>--Selecciona--</option>
      <option value="Freelance">Freelance</option>
      <option value="Tiempo Completo">Tiempo Completo</option>
      <option value="Medio tiempo">Medio tiempo</option>
      <option value="Por proyecto">Por proyecto</option>
    {{/tipoContrato}}

     {{else}}
    <option disabled selected>--Selecciona--</option>
      <option value="Freelance">Freelance</option>
      <option value="Tiempo Completo">Tiempo Completo</option>
      <option value="Medio tiempo">Medio tiempo</option>
      <option value="Por proyecto">Por proyecto</option>

        {{/if}} />
    {{/if}}

  </select>
    

</div>

