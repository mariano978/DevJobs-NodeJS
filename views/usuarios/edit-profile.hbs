<main class="contenedor">
  <form action="/edit-profile" method="POST" class="default-form">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input
        value="{{usuario.nombre}}"
        type="text"
        name="nombre"
        placeholder="Tu nombre"
        
      />
    </div>
    <div class="campo">
      <label for="email">Email</label>
      <input
        value="{{usuario.email}}"
        type="email"
        name="email"
        placeholder="Tu email"
        
      />
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Si no desea cambiarlo deje en blanco" />
    </div>
    <div class="campo">
      <input type="submit" class="btn btn-azul" value="Guardar Cambios" />
    </div>
  </form>
</main>